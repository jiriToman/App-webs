<section id="newsletter" class="section">
    <div class="container">
        <h2>{{t "newsletter.h2" }}</h2>
        <div class="row newsform align-items-center">
             <div class="col-12 col-md-5 col-lg-3 newsimg">
                <picture>
                    <source srcset="/images/images-mail-dark.svg" media="(prefers-color-scheme: dark)">
                    <img src="/images/images-mail.svg" alt="Dog fetching mail">
                </picture>
             </div>
             <div class="col-12 col-md-7 col-lg-6 newstext">
                <p class="col-12 newsp">{{t "newsletter.txt" }}<span class="smiley"> üòç</span></p>
                <form action="https://sendy.tappytaps.com/subscribe" method="POST" accept-charset="utf-8" id="newsletter-form">
                    <div class="row no-gutters form-inside">
                        {{!-- <input type="email" name="email" placeholder="{{t "newsletter.email" }}" id="email"/> --}}
                        <div class="col-12 col-sm-auto formspacer"><input type="email" name="email" placeholder="{{t "newsletter.email" }}" id="email"/></div>
                        <div style="display:none;">
                            <label for="hp">HP</label><br />
                            <input type="text" name="hp" id="hp" />
                        </div>
                        <input type="hidden" name="list" value="KrDv1otGvJn1AfUtt6Wx4w" />
                        <input type="hidden" name="subform" value="yes" />

                         <div class="col-12 col-sm-auto formspacer"> <input onclick="dataLayer.push({'event': 'submit-click-newsletter'});" type="submit" name="submit" value="{{t "newsletter.submit" }}" class="submit btn buttonlink" /></div>
                        {{!-- <input onclick="dataLayer.push({'event': 'submit-click-newsletter'});" type="submit" name="submit" value="{{t "newsletter.submit" }}" class="submit btn buttonlink" /> --}}
                    </div>
                </form>
                <p id="form-success-msg" class="hidden">{{t "newsletter.success" }}</p>
                <p id="form-error-msg" class="hidden">{{t "newsletter.error" }}</p>
                <p id="form-email-msg" class="hidden">{{t "newsletter.wmail" }}</p>
            </div>
        </div>
    </div>

</section>