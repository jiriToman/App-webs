<section id="reasons" class="section">
    <div class="container">
        <div class="col-12 s-header">

            <h2>{{t "reasons.h2" }}</h2>
            <p class="subheader d-none d-lg-block">{{t "reasons.h3" }}</p>

        </div>
        <div class="row">
            <div class="col-12 col-md-6 col-xl-6 reason">

                <picture id="pic-sleeping-baby" alt="Image of sleeping baby">
                    <source srcset="/images/daynight.jpg, /images/daynight@2x.jpg 2x, /images/daynight@3x.jpg 3x,"
                     media="(prefers-color-scheme: dark)">
                    <source srcset="/images/daynight.jpg, /images/daynight@2x.jpg 2x, /images/daynight@3x.jpg 3x,"
                        media="(prefers-color-scheme: light), (prefers-color-scheme: no-preference)">
                    <img class="img-fluid" src="/images/daynight.jpg">
                </picture>
                <picture class="img-top-left sm-right" id="pic-zzz" alt="Z Z bubble">
                    <source srcset="/images/zzz.svg" media="(prefers-color-scheme: dark)">
                    <source srcset="/images/zzz.svg"
                        media="(prefers-color-scheme: light), (prefers-color-scheme: no-preference)">
                    <img class="" src="/images/zzz.svg">
                </picture>

            </div>
            <div class="col-12 col-md-5 offset-xl-1 reason text">

                <h3>{{t "reasons.watch.h4" }}</h3>
                <p>{{t "reasons.watch.txt" }}</p>

            </div>
        </div>
        <div class="row">
           

             <div class="col-12 col-md-7 col-xl-6 offset-xl-1 order-md-2 reason">

                <picture id="pic-traveling" alt="Photo of baby playnig on the beach">
                    <source srcset="/images/traveling.jpg, /images/traveling@2x.jpg 2x, /images/traveling@3x.jpg 3x,"
                     media="(prefers-color-scheme: dark)">
                    <source srcset="/images/traveling.jpg, /images/traveling@2x.jpg 2x, /images/traveling@3x.jpg 3x,"
                        media="(prefers-color-scheme: light), (prefers-color-scheme: no-preference)">
                    <img class="img-fluid" src="/images/traveling.jpg">
                </picture>
                <picture class="img-top-left" id="pic-plane" alt="Image of the plane">
                    <source srcset="/images/plane.svg" media="(prefers-color-scheme: dark)">
                    <source srcset="/images/plane.svg"
                        media="(prefers-color-scheme: light), (prefers-color-scheme: no-preference)">
                    <img class="" src="/images/plane.svg">
                </picture>

            </div>
                        <div class="col-12 col-md-5 order-md-1 reason text">

                <h3>{{t "reasons.travel.h4" }}</h3>
                <p>{{t "reasons.travel.txt" }}</p>

            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-7 col-xl-6 reason">

                <picture id="pic-nohw" alt="Photo of hands using the phone">
                    <source srcset="/images/nohardware.jpg, /images/nohardware@2x.jpg 2x, /images/nohardware@3x.jpg 3x,"
                     media="(prefers-color-scheme: dark)">
                    <source srcset="/images/nohardware.jpg, /images/nohardware@2x.jpg 2x, /images/nohardware@3x.jpg 3x,"
                        media="(prefers-color-scheme: light), (prefers-color-scheme: no-preference)">
                    <img class="img-fluid" src="/images/nohardware.jpg">
                </picture>
                <picture class="img-top-left sm-right" id="pic-camera" alt="Image of crossed camera">
                    <source srcset="/images/camera.svg" media="(prefers-color-scheme: dark)">
                    <source srcset="/images/camera.svg"
                        media="(prefers-color-scheme: light), (prefers-color-scheme: no-preference)">
                    <img class="" src="/images/camera.svg">
                </picture>

            </div>
            <div class="col-12 col-md-5 offset-xl-1 reason text">

                <h3>{{t "reasons.nohw.h4" }}</h3>
                <p>{{t "reasons.nohw.txt" }}</p>
                <p class=" mt-16p mt-lg-18p">{{t "reasons.nohw.botxt" }}</p>
                <p class="d-none d-lg-block">
