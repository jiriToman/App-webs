<section id="features" class="section">
    <div class="container">
        <div class="col-12 s-header">
            <h2>{{t "features.h2" }}</h2>
            <p class="subheader d-none d-md-block">{{t "features.h3" }}</p>
        </div>
        <div class="row">
            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-0 col-lg-4 feature">
                <div class="f-inside">
                    <picture id="pic-icon-watch" alt="Icon of the camera">
                        <source srcset="/images/icon-camera.svg"
                            media="(prefers-color-scheme: dark) and (min-width:768px)">
                        <source srcset="/images/icon-camera-sm.svg"
                            media="(prefers-color-scheme: dark) and (max-width:767px)">
                        <source srcset="/images/icon-camera.svg"
                            media=" (min-width:768px)">
                        <source srcset="/images/icon-camera-sm.svg"
                            media=" (max-width:767px)">
                        <img class="feature-icon" src="/images/icon-camera-sm.svg">
                    </picture>
                    <h4><span class="d-none d-md-block">{{t "features.hd.h4" }}</span><span class="d-block d-md-none">{{t "features.hd.h4sm" }}</span></h4>
                    <p class="d-none d-md-block">{{t "features.hd.txt" }}</p>
                </div>
            </div>
            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-0 col-lg-4 feature">
                <div class="f-inside">
                    <picture id="pic-icon-talk" alt="Icon of the microphone">
                        <source srcset="/images/icon-mic.svg" media="(prefers-color-scheme: dark) and (min-width:768px)">
                        <source srcset="/images/icon-mic-sm.svg"
                            media="(prefers-color-scheme: dark) and (max-width:767px)">
                        <source srcset="/images/icon-mic.svg"
                            media=" (min-width:768px)">
                        <source srcset="/images/icon-mic-sm.svg"
                            media=" (max-width:767px)">
                        <img class="feature-icon" src="/images/icon-mic-sm.svg">
                    </picture>
                    <h4><span class="d-none d-md-block">{{t "features.talk.h4" }}</span><span class="d-block d-md-none">{{t "features.talk.h4sm" }}</span></h4>
                    <p class="d-none d-md-block">{{t "features.talk.txt" }}</p>
                </div>
            </div>
            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-0 col-lg-4  feature">
                <div class="f-inside">
                    <picture id="pic-icon-alog" alt="Icon of the Activity log">
                        <source srcset="/images/icon-alog.svg" media="(prefers-color-scheme: dark) and (min-width:768px)">
                        <source srcset="/images/icon-alog-sm.svg"
                            media="(prefers-color-scheme: dark) and (max-width:767px)">
                        <source srcset="/images/icon-alog.svg"
                            media=" (min-width:768px)">
                        <source srcset="/images/icon-alog-sm.svg"
                            media=" (max-width:767px)">
                        <img class="feature-icon" src="/images/icon-alog-sm.svg">
                    </picture>

                    <h4><span class="d-none d-md-block">{{t "features.log.h4" }}</span><span class="d-block d-md-none">{{t "features.log.h4sm" }}</span></h4>
                    <p class="d-none d-md-block">{{t "features.log.txt" }}</p>
                </div>
            </div>

            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-0 col-lg-4  feature">
                <div class="f-inside">
                    <picture id="pic-icon-multi" alt="Icon of the multiple parent devices">
                        <source srcset="/images/icon-devices.svg"
                            media="(prefers-color-scheme: dark) and (min-width:768px)">
                        <source srcset="/images/icon-devices-sm.svg"
                            media="(prefers-color-scheme: dark) and (max-width:767px)">
                        <source srcset="/images/icon-devices.svg"
                            media=" (min-width:768px)">
                        <source srcset="/images/icon-devices-sm.svg"
                            media=" (max-width:767px)">
                        <img class="feature-icon" src="/images/icon-devices-sm.svg">
                    </picture>

                    <h4><span class="d-none d-md-block">{{t "features.connect.h4" }}</span><span class="d-block d-md-none">{{t "features.connect.h4sm" }}</span></h4>
                    <p class="d-none d-md-block">{{t "features.connect.txt" }}</p>
                </div>
            </div>

            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-0 col-lg-4  feature">
                <div class="f-inside">
                    <picture id="pic-icon-lullaby" alt="Icon of the music note">
                        <source srcset="/images/icon-lullaby.svg"
                            media="(prefers-color-scheme: dark) and (min-width:768px)">
                        <source srcset="/images/icon-lullaby-sm.svg"
                            media="(prefers-color-scheme: dark) and (max-width:767px)">
                        <source srcset="/images/icon-lullaby.svg"
                            media=" (min-width:768px)">
                        <source srcset="/images/icon-lullaby-sm.svg"
                            media=" (max-width:767px)">
                        <img class="feature-icon" src="/images/icon-lullaby-sm.svg">
                    </picture>

                    <h4><span class="d-none d-md-block">{{t "features.lullaby.h4" }}</span><span class="d-block d-md-none">{{t "features.lullaby.h4sm" }}</span></h4>
                    <p class="d-none d-md-block">{{t "features.lullaby.txt" }}</p>
                </div>
            </div>

            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-0 col-lg-4 feature ">
                <div class="f-inside">
                    <picture id="pic-icon-secure" alt="Icon of the security padlock">
                        <source srcset="/images/icon-secure.svg"
                            media="(prefers-color-scheme: dark) and (min-width:768px)">
                        <source srcset="/images/icon-secure-sm.svg"
                            media="(prefers-color-scheme: dark) and (max-width:767px)">
                        <source srcset="/images/icon-secure.svg"
                            media=" (min-width:768px)">
                        <source srcset="/images/icon-secure-sm.svg"
                            media=" (max-width:767px)">
                        <img class="feature-icon" src="/images/icon-secure-sm.svg">
                    </picture>

                    <h4><span class="d-none d-md-block">{{t "features.reliable.h4" }}</span><span class="d-block d-md-none">{{t "features.reliable.h4sm" }}</span></h4>
                    <p class="d-none d-md-block">{{t "features.reliable.txt" }}</p>
                </div>
            </div>

            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-0 col-lg-4  feature">
                <div class="f-inside">
                    <picture id="pic-icon-notify" alt="Icon of the notification bell">
                        <source srcset="/images/icon-notify.svg"
                            media="(prefers-color-scheme: dark) and (min-width:768px)">
                        <source srcset="/images/icon-notify-sm.svg"
                            media="(prefers-color-scheme: dark) and (max-width:767px)">
                        <source srcset="/images/icon-notify.svg"
                            media=" (min-width:768px)">
                        <source srcset="/images/icon-notify-sm.svg"
                            media=" (max-width:767px)">
                        <img class="feature-icon" src="/images/icon-notify-sm.svg">
                    </picture>

                    <h4><span class="d-none d-md-block">{{t "features.notify.h4" }}</span><span class="d-block d-md-none">{{t "features.notify.h4sm" }}</span></h4>
                    <p class="d-none d-md-block">{{t "features.notify.txt" }}</p>
                </div>
            </div>

            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-0 col-lg-4 feature">
                <div class="f-inside">
                    <picture id="pic-icon-reach" alt="Icon of the globe">
                        <source srcset="/images/icon-reach.svg" media="(prefers-color-scheme: dark) and (min-width:768px)">
                        <source srcset="/images/icon-reach-sm.svg"
                            media="(prefers-color-scheme: dark) and (max-width:767px)">
                        <source srcset="/images/icon-reach.svg"
                            media=" (min-width:768px)">
                        <source srcset="/images/icon-reach-sm.svg"
                            media=" (max-width:767px)">
                        <img class="feature-icon" src="/images/icon-reach-sm.svg">
                    </picture>


                    <h4><span class="d-none d-md-block">{{t "features.reach.h4" }}</span><span class="d-block d-md-none">{{t "features.reach.h4sm" }}</span></h4>
                    <p class="d-none d-md-block">{{t "features.reach.txt" }}</p>
                </div>
            </div>

            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-0 col-lg-4 feature last">
                <div class="f-inside">
                    <picture id="pic-icon-platform" alt="Icon with phone and desktop pc">
                        <source srcset="/images/icon-platform.svg"
                            media="(prefers-color-scheme: dark) and (min-width:768px)">
                        <source srcset="/images/icon-platform-sm.svg"
                            media="(prefers-color-scheme: dark) and (max-width:767px)">
                        <source srcset="/images/icon-platform.svg"
                            media="(min-width:768px)">
                        <source srcset="/images/icon-platform-sm.svg"
                            media="(max-width:767px)">
                        <img class="feature-icon" src="/images/icon-platform-sm.svg">
                    </picture>

                    <h4><span class="d-none d-md-block">{{t "features.platform.h4" }}</span><span class="d-block d-md-none">{{t "features.platform.h4sm" }}</span></h4>
                    <p class="d-none d-md-block">{{t "features.platform.txt" }}</p>
                </div>
            </div>
        </div>
        <div id="banner" class="d-block d-lg-none">
            <h4>{{t "features.banner.h4" }}</h4>
            <p>{{t "features.banner.txt" }}</p>
            <a id="mobile-banner-app-store" class="btn hidden display-ios d-inline-block d-lg-none buttonlink lg invert"
                href='{{t "platforms.ioslink" }}' role="button">
                <svg class="platformsvg" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                    <title>iOS</title>
                    <path fill="currentColor" fill-rule="nonzero"
                        d="M18.034 11.7c.03 3.33 2.931 4.432 2.966 4.443-.017.078-.454 1.591-1.543 3.125-.909 1.352-1.86 2.674-3.373 2.696-1.47.035-1.964-.859-3.649-.859-1.7 0-2.227.837-3.636.894-1.44.052-2.54-1.442-3.483-2.782-1.882-2.735-3.348-7.706-1.383-11.09C4.885 6.47 6.622 5.4 8.477 5.373c1.443-.03 2.78.968 3.667.968.869 0 2.524-1.193 4.23-1.015.713.02 2.744.28 4.055 2.18-.106.063-2.42 1.415-2.395 4.195zM15.26 3.526c-.79.928-2.056 1.638-3.288 1.546-.162-1.252.463-2.583 1.162-3.396C13.923.755 15.295.048 16.392 0c.144 1.301-.375 2.584-1.133 3.526z" />
